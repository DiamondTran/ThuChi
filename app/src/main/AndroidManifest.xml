<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diamond.diamond.thuchi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.AddKCActivity"
            android:label="@string/title_activity_add_kc"
            android:parentActivityName=".activity.ChiActivity"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.diamond.diamond.thuchi.activity.ChiActivity" />
        </activity>
        <activity
            android:name=".activity.AddKTActivity"
            android:label="@string/title_activity_add_kt"
            android:parentActivityName=".activity.ThuActivity"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.diamond.diamond.thuchi.activity.ThuActivity" />
        </activity>
        <activity
            android:name=".activity.ThuActivity"
            android:label="@string/title_activity_thu"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.diamond.diamond.thuchi.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.NoteActivity"
            android:label="@string/title_activity_note"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.diamond.diamond.thuchi.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.ThongkeActivity"
            android:label="@string/title_activity_thongke"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.diamond.diamond.thuchi.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.ChiActivity"
            android:label="@string/title_activity_chi"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.diamond.diamond.thuchi.activity.MainActivity" />
        </activity>
        <activity android:name=".activity.HelloActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/home"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>